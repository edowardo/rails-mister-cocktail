<div class="card-trip">
  <% if cocktail.photo.file %>
    <%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fill %>
  <% else %>
    <img src="https://www.thespruceeats.com/thmb/dlJ9frrWnwGf6UHIwZzFjfFvOoM=/960x0/filters:no_upscale():max_bytes(150000):strip_icc():format(webp)/_kamikaze-cocktail-recipe-759313-hero-5bb7c7e846e0fb0051ee4eb4.jpg" />
  <% end %>
  <div class="card-trip-infos">
    <div>
      <h2><%= cocktail.name %></h2>
      <ul>
        <% cocktail.doses.each do |dose| %>
        <li><%= dose.description %> of <%= dose.ingredient.name %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
